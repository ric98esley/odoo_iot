<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <!-- View iot.credentials List -->
  <record id="view_iot_credentials_list" model="ir.ui.view">
    <field name="name">view.iot.credentials.list</field>
    <field name="model">iot.credentials</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="resource_type" />
        <field name="user_id" />
        <field name="device_id" />
        <field name="is_superuser" />
      </list>
    </field>
  </record>

  <!-- View iot.credentials form -->
  <record id="view_iot_credentials_form" model="ir.ui.view">
    <field name="name">view.iot.credentials.form</field>
    <field name="model">iot.credentials</field>
    <field name="arch" type="xml">
      <form string="IoT Credentials">
        <sheet>
          <div class="oe_title">
            <label for="name" />
            <h1>
              <field name="name" placeholder="Username..." />
            </h1>
          </div>
          <group>
            <group>
              <field name="password" password="True" placeholder="Password..." />
              <field name="is_superuser" />
            </group>
            <group>
              <field name="resource_type" />
              <field
                name="user_id"
                invisible="resource_type != 'user'"
                required="resource_type == 'user'"
              />
              <field
                name="device_id"
                invisible="resource_type != 'device'"
                required="resource_type == 'device'"
              />
              <field name="company_id" groups="base.group_multi_company" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- View iot.credentials search -->
  <record id="view_iot_credentials_search" model="ir.ui.view">
    <field name="name">view.iot.credentials.search</field>
    <field name="model">iot.credentials</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="user_id" />
        <field name="device_id" />
        <filter
          string="Superusers"
          name="superusers"
          domain="[('is_superuser', '=', True)]"
        />
        <group expand="1" string="Group By">
          <filter
            string="Resource Type"
            name="resource_type"
            domain="[]"
            context="{'group_by':'resource_type'}"
          />
          <filter
            string="Superuser"
            name="is_superuser"
            domain="[]"
            context="{'group_by':'is_superuser'}"
          />
        </group>
      </search>
    </field>
  </record>

  <!-- Action iot.credentials -->
  <record id="action_iot_credentials" model="ir.actions.act_window">
    <field name="name">IoT Credentials</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">iot.credentials</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
                Click here to add new IoT Credentials for EMQX authentication.
            </p>
    </field>
  </record>
</odoo>
