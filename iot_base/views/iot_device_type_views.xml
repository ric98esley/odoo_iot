<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_iot_device_type_list" model="ir.ui.view">
    <field name="name">view.iot.device.type.list</field>
    <field name="model">iot.device.type</field>
    <field name="arch" type="xml">
      <list editable="bottom">
        <field name="name" />
        <field name="description" />
      </list>
    </field>
  </record>

  <record id="view_iot_device_type_form" model="ir.ui.view">
    <field name="name">view.iot.device.type.form</field>
    <field name="model">iot.device.type</field>
    <field name="arch" type="xml">
      <form string="Iot Device Type">
        <sheet>
          <div class="oe_title">
            <label for="name" />
            <h1>
              <field name="name" placeholder="Name..." />
            </h1>
          </div>
          <group>
            <field name="description" placeholder="Description..." />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_iot_device_type_search" model="ir.ui.view">
    <field name="name">view.iot.device.type.search</field>
    <field name="model">iot.device.type</field>
    <field name="arch" type="xml">
      <search>
        <group expand="1" string="Group By">
          <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}" />
        </group>
      </search>
    </field>
  </record>

  <record id="action_iot_device_type" model="ir.actions.act_window">
    <field name="name">Iot Device Type</field>
    <field name="res_model">iot.device.type</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
                There is no examples click here to add new Iot Device Type.
            </p>
    </field>
  </record>
</odoo>
