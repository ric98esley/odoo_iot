<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="iot_base.Root">
    <div class="container-fluid p-4">
      <div class="row mb-4">
        <div class="col-12">
          <h1 class="display-4 text-center mb-2">
                        <i class="fa fa-microchip me-3" />IoT Dashboard
                    </h1>
          <p class="text-center text-muted">
                        Monitor and control your IoT devices through MQTT protocol
                    </p>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8">
          <MQTTSubscriber title="'MQTT Topic Monitor'" />
        </div>
        <div class="col-lg-4">
          <div class="row g-3">
            <div class="col-md-6 col-lg-12">
              <EventIndicator title="'Event Monitor'" width="'100%'" variable="'LED'" />
            </div>
            <div class="col-md-6 col-lg-12">
              <EventIndicator
                title="'Motion Detector'"
                width="'100%'"
                variable="'motion'"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </t>
</templates>
